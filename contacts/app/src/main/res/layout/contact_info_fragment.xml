<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.contactinfo.ContactInfoFragment">

    <ImageView
        android:id="@+id/image_contact"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/placeholder"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_below="@id/image_contact"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/text_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center_horizontal"
        android:text="Name"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_phones"
        android:layout_below="@id/text_contact_name"
        tools:listitem="@layout/item_phone_number_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>